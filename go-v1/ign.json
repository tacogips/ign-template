{
  "name": "go-v1",
  "version": "1.0.0",
  "description": "Go project template with standard layout",
  "author": "tacogips",
  "repository": "https://github.com/tacogips/ign-template",
  "license": "MIT",
  "tags": [
    "go",
    "golang",
    "nix",
    "task"
  ],
  "variables": {
    "DESCRIPTION": {
      "type": "string",
      "description": "Project description",
      "help": "A brief description of your project for README and documentation",
      "default": "A Go project"
    },
    "GO_VERSION": {
      "type": "string",
      "description": "Go version",
      "help": "Go version for go.mod (e.g., 1.21, 1.22, 1.23, 1.24)",
      "default": "1.24"
    },
    "HOMEPAGE": {
      "type": "string",
      "description": "Project homepage URL",
      "help": "URL for project homepage (e.g., GitHub repository URL)",
      "default": "https://github.com/user/repo"
    },
    "LICENSE": {
      "type": "string",
      "description": "License type",
      "help": "License identifier for your project (e.g., MIT, Apache-2.0, GPL-3.0)",
      "default": "MIT"
    },
    "MODULE_PATH": {
      "type": "string",
      "description": "Go module path",
      "help": "The import path for your Go module (e.g., github.com/username/project)",
      "required": true,
      "example": "github.com/username/my-app"
    },
    "PROJECT_NAME": {
      "type": "string",
      "description": "Project name",
      "help": "Used for binary name, directory names, and package references",
      "required": true,
      "example": "my-app"
    },
    "USE_TASK": {
      "type": "bool",
      "description": "Include Taskfile.yml",
      "help": "Include Taskfile.yml for task automation with go-task",
      "default": true
    }
  },
  "settings": {
    "ignore_patterns": [
      ".git",
      ".DS_Store"
    ],
    "include_dotfiles": true
  },
  "hash": "3a6fd664a4687998d6c05fa8f3e73d3e9388b1e627a6e2bde806e861ceb96a6b"
}